<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Width="1100" Height="700"
        x:Class="СlinicReception.Views.PatientView">
	<Panel>
		<StackPanel>
			<TabControl>
				<TabItem Header="Запись на приём" VerticalContentAlignment="Center">
					
				</TabItem>
				<TabItem Header="Карта пациента" VerticalContentAlignment="Center">
					
				</TabItem>
				<TabItem>
					<TabItem.Header>
						<TextBlock VerticalAlignment="Center">Расписание врачей</TextBlock>
					</TabItem.Header>
					<StackPanel DockPanel.Dock="Top">
						<TextBox Text="{Binding SearchText}" Watermark="Введите имя врача или № кабинета" />
						<ProgressBar IsIndeterminate="True" IsVisible="{Binding IsBusy}" />
					</StackPanel>
				</TabItem>
				<TabItem>
					<TabItem.Header>
						<TextBlock VerticalAlignment="Center">Справки</TextBlock>
					</TabItem.Header>
					<StackPanel Orientation="Horizontal">
						
					</StackPanel>
				</TabItem>
			</TabControl>
		</StackPanel>
	</Panel>
</UserControl>
